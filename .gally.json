{
  "defaultBranch": "master",
  "repository": {
    "url": "https://github.com/loopmediagroup/gally.git"
  },
  "branches": {
    "dev": {
      "upstream": "master",
      "protection": "$full-strict",
      "create": true
    },
    "master": {
      "protection": "$full",
      "create": true
    },
    "fix/*": {
      "upstream": "dev"
    },
    "feat/*": {
      "upstream": "dev"
    },
    "greenkeeper/*": {
      "upstream": "dev"
    }
  },
  "protection": {
    "$full-strict": {
      "@": "$full",
      "required_status_checks": {
        "strict": true
      }
    },
    "$full": {
      "required_status_checks": {
        "strict": false,
        "contexts": [
          "continuous-integration/travis-ci",
          "coverage/coveralls"
        ]
      },
      "enforce_admins": true,
      "required_pull_request_reviews": {
        "dismissal_restrictions": {
          "users": [
            "simlu"
          ],
          "teams": []
        },
        "dismiss_stale_reviews": true,
        "require_code_owner_reviews": true,
        "required_approving_review_count": 1
      },
      "restrictions": {
        "users": [
          "simlu"
        ],
        "teams": []
      }
    }
  }
}
