{
  "name": "gally",
  "version": "0.0.0-development",
  "description": "Git-Ally - Automation around Github.com Repository Management",
  "main": "lib/index.js",
  "preferGlobal": true,
  "bin": {
    "gally": "./lib/index.js",
    "ga": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "it": "yarn run i && yarn run t"
  },
  "author": "Loop Media Group",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/register": "7.12.10",
    "@blackflux/eslint-plugin-rules": "1.3.45",
    "@blackflux/robo-config-plugin": "4.0.1",
    "babel-eslint": "10.1.0",
    "babel-preset-latest-node": "5.2.0",
    "chai": "4.2.0",
    "coveralls": "3.1.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jasmine": "4.1.1",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-markdown": "1.0.2",
    "eslint-plugin-mocha": "8.0.0",
    "js-gardener": "2.0.184",
    "nock": "13.0.5",
    "node-tdd": "2.19.1",
    "nyc": "15.1.0",
    "semantic-release": "17.3.2",
    "tmp": "0.2.1"
  },
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true,
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ]
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/loopmediagroup/gally/blob/master/LICENSE"
    }
  ],
  "keywords": [],
  "homepage": "https://github.com/loopmediagroup/gally#readme",
  "engines": {
    "node": ">= 10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loopmediagroup/gally.git"
  },
  "bugs": {
    "url": "https://github.com/loopmediagroup/gally/issues"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "chalk": "4.1.0",
    "inquirer": "7.3.3",
    "lodash.get": "4.4.2",
    "lodash.mergewith": "4.6.2",
    "lodash.set": "4.3.2",
    "open": "7.3.1",
    "request": "2.88.2",
    "request-promise-native": "1.0.9",
    "yargs": "16.2.0"
  },
  "peerDependencies": {}
}
