{
  "name": "gally",
  "version": "0.0.0-development",
  "description": "Git-Ally - Automation around Github.com Repository Management",
  "main": "lib/index.js",
  "preferGlobal": true,
  "bin": {
    "gally": "./lib/index.js",
    "ga": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile"
  },
  "author": "Loop Media Group",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/register": "7.8.3",
    "@blackflux/eslint-plugin-rules": "1.3.24",
    "@blackflux/robo-config-plugin": "3.0.8",
    "babel-eslint": "10.0.3",
    "chai": "4.2.0",
    "coveralls": "3.0.9",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jasmine": "4.1.0",
    "eslint-plugin-json": "2.0.1",
    "eslint-plugin-markdown": "1.0.1",
    "eslint-plugin-mocha": "6.3.0",
    "js-gardener": "2.0.133",
    "nock": "12.0.1",
    "node-tdd": "2.9.2",
    "nyc": "15.0.0",
    "semantic-release": "17.0.4",
    "tmp": "0.1.0"
  },
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true,
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ]
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/loopmediagroup/gally/blob/master/LICENSE"
    }
  ],
  "keywords": [],
  "homepage": "https://github.com/loopmediagroup/gally#readme",
  "engines": {
    "node": ">= 8.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loopmediagroup/gally.git"
  },
  "bugs": {
    "url": "https://github.com/loopmediagroup/gally/issues"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "chalk": "3.0.0",
    "inquirer": "7.0.4",
    "lodash.get": "4.4.2",
    "lodash.mergewith": "4.6.2",
    "lodash.set": "4.3.2",
    "open": "7.0.2",
    "request": "2.88.2",
    "request-promise-native": "1.0.8",
    "yargs": "15.1.0"
  },
  "peerDependencies": {}
}
